[Unit]
Description=Gunicorn daemon for Django project miroutepe
After=network.target

[Service]
User=danielgusdev
Group=www-data
WorkingDirectory=/var/www/miroutepe_server
Environment="PATH=/var/www/miroutepe_server/.venv/bin"

RuntimeDirectory=miroutepe
RuntimeDirectoryMode=0775
ExecStart=/var/www/miroutepe_server/.venv/bin/gunicorn --workers 3 --access-logfile - \
  --bind unix:/var/www/miroutepe_server/miroutepe.sock \
  --umask 000 \
  miroutesite.wsgi:application


Restart=always

[Install]
WantedBy=multi-user.target

